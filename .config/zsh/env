#!/usr/bin/env zsh

# username
export PS1="%1~ %# "

# cmake
export CMAKE_ROOT="$HOME/cmake-3.19.0"

# k4a
export LD_LIBRARY_PATH="/usr/lib/x86_64-linux-gnu/libk4a1.4":$LD_LIBRARY_PATH

# opencv
# export LD_LIBRARY_PATH="/home/yito/research/opencv/build/lib":$LD_LIBRARY_PATH

# blender
export PATH=$PATH:/research/tamura_research/local/blender-4.0.1-linux-x64

# nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
export PATH=$PATH:/research/tamura_research/.pyenv/versions/global/lib/python3.10/site-packages/pyright

#Â cargo: for starship
export PATH="$PATH:$HOME/.cargo/bin"

# poetry
export PATH="/home/tamura/.local/bin:$PATH"

# CUDA
export CUDA_PATH=/usr/local/cuda-11.7
export LD_LIBRARY_PATH=/usr/local/cuda-11.7/lib64:${LD_LIBRARY_PATH}
export PATH=/usr/local/cuda-11.7/bin:${PATH}
